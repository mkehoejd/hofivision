{
  "name": "hofivision",
  "type": "module",
  "version": "0.1.0",
  "description": "Unified comms terminal for all platforms",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "electron ."
  },
  "build": {
    "appId": "com.hofi.vision",
    "productName": "HOFIVISION",
    "files": [
      "public/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "xterm": "^5.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "electron": "^36.3.1",
    "electron-builder": "^24.0.0",
    "tailwindcss": "^3.0.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.29.0"
  }
}
